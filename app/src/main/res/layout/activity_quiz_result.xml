<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.questionnaire.QuestionnaireResultActivity">

    <LinearLayout
        android:id="@+id/result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your total annual carbon emissions are:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/emission_headings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/user_emissions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:text="1000.0"
                android:textAlignment="viewEnd"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_units"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="tonne(s)/yr" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/country_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_layout"
        android:layout_margin="20dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/country_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your carbon footprint is:"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/country_comparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="50%"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country_comparison_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="below the average"
            android:textAlignment="center"
            android:textSize="15sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/category_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/category_layout"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="13dp"
        android:text="Here's a breakdown of your results:"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/category_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="87dp"
        android:orientation="vertical">

    </LinearLayout>

    <Button
        android:id="@+id/btnCompleteQuiz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:text="Complete" />

    <LinearLayout
        android:id="@+id/global_target_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/country_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/global_target_comparison_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparing your carbon footprint to the global target:"
            android:textAlignment="center"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/global_target_comparison"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="40%"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/global_target_comparison_subtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Below the global target"
            android:textAlignment="center"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>