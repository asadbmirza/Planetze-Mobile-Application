<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true"
        android:color="@color/white" >
        <shape
            android:shape="rectangle"
            >
            <solid android:color="@color/turquoise" />

            <stroke
                android:width="3dp"
                android:color="@color/turquoise" />

            <corners
                android:radius="7sp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item
        android:color="@color/black" >
        <shape
            android:shape="rectangle"
            >
            <solid android:color="@android:color/transparent" />

            <stroke
                android:width="3dp"
                android:color="@color/turquoise" />

            <corners
                android:radius="7sp" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>